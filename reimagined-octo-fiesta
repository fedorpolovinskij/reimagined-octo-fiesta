        switch action {
        case .changeMask(let mask):
            newState.mask = mask
            
        case .changeBlendMode(let mode):
            newState.blendMode = mode
            
        case .changeZPosition(let index):
            newState.zPosition = index
            
        case .changeAnimation(let animation):
            newState.animation = animation
        }

        return newState
    }
    
